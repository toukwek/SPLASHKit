<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.cal_staff.splashkit.Signal_transfer">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Data analysis"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="?attr/colorButtonNormal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PH Analysis"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/reagent"
        android:layout_alignStart="@+id/reagent"
        android:layout_marginTop="11dp"
        android:layout_alignRight="@+id/reagent"
        android:layout_alignEnd="@+id/reagent" />

    <Button
        android:id="@+id/reagent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chlorine Analysis"
        android:layout_below="@+id/water"
        android:layout_centerHorizontal="true" />

<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Disconnect"
android:id="@+id/disconnect"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="water analysis"
        android:layout_below="@+id/reagent"
        android:layout_alignLeft="@+id/reagent"
        android:layout_alignStart="@+id/reagent"
        android:layout_alignRight="@+id/reagent"
        android:layout_alignEnd="@+id/reagent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Results:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/disconnect"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorButtonNormal" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="10dp"
        android:background="?attr/colorButtonNormal" />
</RelativeLayout>